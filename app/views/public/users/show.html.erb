<h1>マイページ</h1>
<div class="row">
<div class="col-10">

<table class="table table-striped table-bordered bg-light">
  <tbody>
    <tr>
      <th width="20%">氏名</th>
      <td><%= @user.name %></td>
    </tr>

    <tr>
      <th>住所</th>
      <td><%= @user.address %></td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>

<%= link_to "プロフィールを編集する", edit_user_path, class: "btn btn-primary mb-4" %><br>
<p><%#= link_to "#{post_comments.post_comments.count} コメント", post_comments_path(post_comment.id) %></p>
<div class="border-top border-dark mb-3"></div>

</div>
</div>