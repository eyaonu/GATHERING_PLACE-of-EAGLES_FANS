<h1>編集画面</h1>
<%= form_with model: @post do |f| %>
  <h4>投稿名</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>関連タグ</h4>
  <%= f.label :tags, 'タグ' %>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %> 
      <%= tag.label do %>
        <%= tag.check_box %>
        <%= tag.text %>
      <% end %>
    <% end %>
  <%= f.submit '保存' %>
<% end %>