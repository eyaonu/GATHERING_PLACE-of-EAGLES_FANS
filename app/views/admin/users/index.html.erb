<!--ユーザー一覧-->
<div class="container mx-auto w-50 border rounded bg-white p-1">

  <div class="row">
    <div class="col-md-6 mt-1">
      <h1 class="text-dark text-center title_bar">ユーザー一覧</h1>
    </div>
    <div class="col-md-2 mt-1"></div>
  </div>

<div class="row mt-2">
  <div class="col-md-9 offset-md-1">
    <table border="1">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

<tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <!--id-->
        <%= user.id %>
      </td>

      <td>
        <!--name-->
        <%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <!--email-->
        <%= user.email %>
      </td>

      <td>
        <!--is_deleted-->
        <% if user.is_deleted == false %>
          <p class="text-success font-weight-bold">有効</p>
        <% else %>
          <p class="text-secondary font-weight-bold">退会</p>
        <% end %>
      </td>

    </tr>
  <% end %>

</tbody>
    </table>

  </div>
</div>
  <div class="row">
    <div class="col-md-2 mx-auto">
    </div>
  </div>
</div>