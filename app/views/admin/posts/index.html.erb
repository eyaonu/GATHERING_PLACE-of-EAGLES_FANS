<div class="container mx-auto w-45 border rounded bg-white p-1">
  <div class="row">
    <div class="col-md-3 mt-0">
      <h1 class="title_bar text-dark text-center">投稿履歴一覧</h1>
    </div>
    <div class="col-md-2 mt-5"></div>
  </div>

  <div class="row mt-3">
    <div class="col-md-8 offset-md-1">

<table class="table">
  <thead>
    <tr>
        <th>投稿日時・時刻</th>
        <th>投稿ユーザー</th>
    </tr>
  </thead>

<tbody>
  <% @posts.each do |post| %>
    <% %>
  <tr>
    <td><%= link_to post.created_at, admin_post_path(post) %></td>
    <td><%= post.user.name %></td>
  </tr>
  <% end %>
</tbody>
</table>