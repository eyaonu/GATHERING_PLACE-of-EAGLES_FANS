<!DOCTYPE html>
<html>
  <head>
    <title>GATHERINGPlace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <%= link_to "日本プロ野球ファンの集合場所", root_path, class: "navbar-brand" %>

  <% if user_signed_in? %>
    <%= render 'public/shared/header' %>
  <% elsif admin_signed_in? %>
    <%= render 'admin/shared/header' %>
  <% else %>
    <li class="nav-item">
      <%= link_to "About", about_path, class: "nav-link fas fa-sign-in-alt" %>
    </li>
    <li class="nav-item">
      <%= link_to "投稿一覧", posts_path, class: "nav-link fas fa-cookie" %>
    </li>
    <li class="nav-item">
      <%= link_to "新規登録", new_user_registration_path, class: "nav-link fas fa-user-plus" %>
    </li>
    <li class="nav-item">
      <%= link_to "ログイン", new_user_session_path, class: "nav-link fas fa-sign-in-alt" %>
    </li>
  <% end %>
      </div>
    </nav>
  </header>

  <div class="body">
  <div class="container">
    <%= yield %>
  </body>
</html>